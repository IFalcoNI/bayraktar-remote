<html>
  <head>
    <meta name='viewport' content='width=device-width, user-scalable=no' />
    <title>Bayraktar Control</title>
    <head>
      <link rel='icon' href='./assets/iconTab.png' />
      <link rel='stylesheet' href='./style.css' />
      <script
        src='https://code.jquery.com/jquery-3.6.0.min.js'
        integrity='sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4='
        crossorigin='anonymous'
      ></script>
      <script src='./js/script.js'></script>
      <script src='./js/joy.js'></script>

    </head>
  </head>
  <body onload='handleJoystick()'>
    <div class='controls'>
      <label class='switch'>
        <input type='checkbox' checked onclick='changeMode()' />
        <span class='slider round'></span>
      </label>
      <div class='speedSlider'>
        <input
          type='range'
          min='0'
          max='1'
          value='0'
          step='0.01'
          {{! onchange='sendPost(`Speed:${value}`)' }}
          class='speedControl'
          id='speedRange'
        />
      </div>
      <form id='btn-form'>
        <div class='double-forward'>
          <button
            class='btn'
            id='double-forward'
            value='forward-forward'
            onclick='sendPost(value)'
          >
          </button>
          <div class='btn-forward'>
            <button
              class='btn'
              id='forward-left'
              value='forward-left'
              onclick='sendPost(value)'
            > </button>
            <button
              class='btn'
              id='forward'
              value='forward'
              onclick='sendPost(value)'
            >
            </button>
            <button
              class='btn'
              id='forward-right'
              value='forward-right'
              onclick='sendPost(value)'
            > </button>
          </div>
        </div>
        <div class='double-left-right'>
          <button
            class='btn'
            id='double-left'
            value='left-left'
            onclick='sendPost(value)'
          >
          </button>
          <div class='btn-left-right'>
            <button
              class='btn'
              id='left'
              value='left'
              onclick='sendPost(value)'
            >
            </button>
            <button
              class='btn'
              id='fire'
              value='fire'
              onclick='sendPost(value)'
            >
            </button>
            <button
              class='btn'
              id='right'
              value='right'
              onclick='sendPost(value)'
            >
            </button>
          </div>
          <button
            class='btn'
            id='double-right'
            value='right-right'
            onclick='sendPost(value)'
          > </button>
        </div>
        <div class='double-back'>
          <div class='btn-back'>
            <button
              class='btn'
              id='back-left'
              value='back-left'
              onclick='sendPost(value)'
            ></button>
            <button
              class='btn'
              id='back'
              value='back'
              onclick='sendPost(value)'
            ></button>
            <button
              class='btn'
              id='back-right'
              value='back-right'
              onclick='sendPost(value)'
            ></button>
          </div>
          <button
            class='btn'
            id='double-back'
            value='back-back'
            onclick='sendPost(value)'
          >
          </button>
        </div>
      </form>
      <div id='myJoystick'>
        <div id='joyDiv'></div>
        <button
          class='btn'
          id='fired'
          value='fire'
          onclick='sendPost(value)'
        >FIRE</button>
      </div>
    </div>

    <div class='waterMark'>
      <p>
        developed by
        <a
          href='https://github.com/IFalcoNI/bayraktar-remote'
          target='_blank'
        >Makohon Pavlo</a></p>
    </div>
    <script src='./js/joystickHelper.js'>
    </script>
    <script src='./js/handleKeyboard.js'></script>
    <script>
      $("button").click(function(e) { e.preventDefault(); });
    </script>
  </body>
</html>